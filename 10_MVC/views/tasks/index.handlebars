<h1>Todas as tasks</h1>

<ul class="task-list">
  {{#each tasks}}
    <li>
      {{#if this.done}}
        <a href="/tasks/show/{{this.id}}" class="title done">{{this.title}}</a>
      {{else}}
        <a href="/tasks/show/{{this.id}}" class="title">{{this.title}}</a>
      {{/if}}

      <div class="actions">
        <form action="/tasks/update/status" method="post">
          <input type="hidden" name="id" value="{{this.id}}" />
          <input type="hidden" name="done" value="{{this.done}}" />
          <button type="submit">
            {{#if this.done}}
              <i class="bi bi-check2-all"></i>
            {{else}}
              <i class="bi bi-check2"></i>
            {{/if}}
          </button>
        </form>

        <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

        <form action="/tasks/delete" method="post">
          <input type="hidden" name="id" value="{{this.id}}" />
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>
